generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  user_id    String   @id
  user_email String   @unique(map: "users_email_key")
  user_pw    String?
  user_name  String
  created_at DateTime @default(now()) @map("created_at")
  updated_at DateTime @updatedAt @map("updated_at")

  @@map("users")
}

model upload_files {
  file_key           String    @id @db.VarChar(20)
  file_original_name String?   @db.VarChar(255)
  file_real_path     String?   @db.VarChar(255)
  file_relative_path String?   @db.VarChar(255)
  file_size          BigInt?
  file_mime_type     String?   @db.VarChar(100)
  file_uploaded_at   DateTime? @db.DateTime(0)
  user_id            String?   @db.VarChar(100)
}

model community {
  id           String   @id
  user_id      String
  title        String
  wedding_data String?  @db.LongText
  likes        Int      @default(0)
  liked        Boolean  @default(false)
  created_at   DateTime @default(now())
  updated_at   DateTime
}

model wedding_data {
  wedding_id     String    @id @db.VarChar(20)
  user_id        String
  wedding_domain String    @unique(map: "wedding_data_unique") @db.VarChar(10)
  wedding_data   String    @db.LongText
  created_at     DateTime?
  updated_at     DateTime?
}
